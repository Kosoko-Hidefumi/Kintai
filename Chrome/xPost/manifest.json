{
  "manifest_version": 3,
  "name": "X Post to Slack/Notion",
  "version": "1.0.0",
  "description": "X(Twitter)の投稿をSlackとNotionに簡単に転送する拡張機能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://slack.com/api/*",
    "https://api.notion.com/v1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

